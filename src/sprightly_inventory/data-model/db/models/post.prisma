model Post {
  id          BigInt    @id @default(autoincrement())
  title       String
  authorId    BigInt
  body        String    @default("")
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  author      User      @relation(fields: [authorId], references: [id])
}

model User {
  id    BigInt @id
  Posts Post[]
}
